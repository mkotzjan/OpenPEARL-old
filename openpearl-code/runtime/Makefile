# pearl runtime system

targets :=

SIGNALS_HH = common/Signals.hh

# read configuration from menuconfig
include ../configuration/.config

ifeq ($(CONFIG_LINUX),y) 
  phony += linux
  targets += linux
endif

ifeq ($(CONFIG_LPC1768),y) 
  phony += lpc1768
  targets += lpc1768
endif

ifeq ($(CONFIG_ESP32),y) 
  phony += esp32
  targets += esp32
endif

$(warning targets = $(targets))

# helper commands include composer, deleted white spaces
IC_DIR = ./includeComposer

# various variable for easy usage in makefile
INSTALL_PEARLINCLUDES = $(CONFIG_INSTALL_Target)/include/PearlIncludes.h

.PHONY: clean depend help all $(targets)

all: $(targets)

prepare:
	touch $(INSTALL_PEARLINCLUDES)
	chmod 777 $(INSTALL_PEARLINCLUDES)
ifeq ($(CONFIG_LINUX),y) 
	@(cd linux; make prepare;)
endif
ifeq ($(CONFIG_LPC1768),y) 
	@(cd lpc1768; make prepare;)
endif
ifeq ($(CONFIG_ESP32),y) 
	@(cd esp32; make prepare;)
endif

linux:
	(cd linux; make -B;)

lpc1768:
	(cd lpc1768; make -B;)

esp32:
	(cd esp32; make -B;)

help:
	@echo "-----------------"
	@echo "make all         : build the pearl libraries for all selected targets"
	@echo "make clean       : remove all generated files"
	@echo "make prepare     : create dummy target installation files with public"
	@echo "                   public write premissions"
	@echo "make install     : install to the installation target"
	@echo "-----------------"
	@echo

.PHONY: targets.inc
targets.inc:
	echo "# autogenerated file with supported plattforms" > targets.inc
	echo plattforms=\"$(targets)\" >>targets.inc

.PHONY: install
install: cc_bin.inc run_bin.inc targets.inc
	@echo "[install] runtime "
	@(cd $(IC_DIR); make;)
	@cat LICENSE.BSD >$(INSTALL_PEARLINCLUDES)
ifeq ($(CONFIG_LINUX),y) 
	@(cd linux; make -B install;)
	@echo "#define LINUX	1" >>$(INSTALL_PEARLINCLUDES)
	@echo "#if TARGET == LINUX" >> $(INSTALL_PEARLINCLUDES)
	@cat linux/pearl.h >>$(INSTALL_PEARLINCLUDES)
	@echo "#endif" >> $(INSTALL_PEARLINCLUDES)
endif
ifeq ($(CONFIG_LPC1768),y) 
	@(cd lpc1768; make -B install;)
	@echo "#define LPC1768	2" >> $(INSTALL_PEARLINCLUDES)
	@echo "#if TARGET == LPC1768" >> $(INSTALL_PEARLINCLUDES)
	@cat lpc1768/pearl.h >>$(INSTALL_PEARLINCLUDES)
	@echo "#endif" >> $(INSTALL_PEARLINCLUDES)
endif
ifeq ($(CONFIG_ESP32),y) 
	@(cd esp32; make -B install;)
	@echo "#define ESP32	3" >> $(INSTALL_PEARLINCLUDES)
	@echo "#if TARGET == ESP32" >> $(INSTALL_PEARLINCLUDES)
	@cat esp32/pearl.h >>$(INSTALL_PEARLINCLUDES)
	@echo "#endif" >> $(INSTALL_PEARLINCLUDES)
endif


.PHONY: cc_bin.inc
cc_bin.inc:
	@echo "[create] $@ "
	@echo "# auto generated " > cc_bin.inc
ifeq ($(CONFIG_LINUX),y) 
	@echo 'if [ "$$PLATTFORM" = "linux" ] ; then' >> cc_bin.inc
	@echo '#include  "runtime/linux/cc_bin.inc"' >>cc_bin.inc
	@echo 'rc=$$?' >>cc_bin.inc
	@echo 'fi' >>cc_bin.inc
endif
ifeq ($(CONFIG_LPC1768),y) 
	@echo 'if [ "$$PLATTFORM" = "lpc1768" ] ; then' >>cc_bin.inc
	@echo '#include  "runtime/lpc1768/cc_bin.inc" ' >>cc_bin.inc
	@echo 'rc=$$?' >>cc_bin.inc
	@echo 'fi' >>cc_bin.inc
endif
ifeq ($(CONFIG_ESP32),y) 
	@echo 'if [ "$$PLATTFORM" = "esp32" ] ; then' >>cc_bin.inc
	@echo '#include  "runtime/esp32/cc_bin.inc" ' >>cc_bin.inc
	@echo 'rc=$$?' >>cc_bin.inc
	@echo 'fi' >>cc_bin.inc
endif

.PHONY: run_bin.inc
run_bin.inc:
	@echo "[create] $@ "
	@echo "# auto generated " > run_bin.inc
ifeq ($(CONFIG_LINUX),y) 
	@echo 'if [ "$$PLATTFORM" = "linux" ] ; then' >> run_bin.inc
	@echo '#include  "runtime/linux/run_bin.inc"' >>run_bin.inc
	@echo 'rc=$$?' >>run_bin.inc
	@echo 'fi' >>run_bin.inc
endif
ifeq ($(CONFIG_LPC1768),y) 
	@echo 'if [ "$$PLATTFORM" = "lpc1768" ] ; then' >>run_bin.inc
	@echo '#include  "runtime/lpc1768/run_bin.inc" ' >>run_bin.inc
	@echo 'rc=$$?' >>run_bin.inc
	@echo 'fi' >>run_bin.inc
endif
ifeq ($(CONFIG_ESP32),y) 
	@echo 'if [ "$$PLATTFORM" = "esp32" ] ; then' >>run_bin.inc
	@echo '#include  "runtime/esp32/run_bin.inc" ' >>run_bin.inc
	@echo 'rc=$$?' >>run_bin.inc
	@echo 'fi' >>run_bin.inc
endif


#---------------------------------------------------------
clean: 
	@echo "[clean] runtime"
	@(cd $(IC_DIR); make clean;)
	@(cd doc; make clean;)
	@$(foreach tgt, $(targets), (cd $(tgt); make clean;);)
	@rm -f cc_bin.inc run_bin.inc targets.inc
	@echo "runtime/clean done"

